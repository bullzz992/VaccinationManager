@model IEnumerable<VaccinationManager.Models.VaccinationDefinition>

@{
    ViewBag.Title = "Vaccinations";
    ViewBag.CurrentPage = "Vaccination Definitions";
}

<h2 style="background-color: #e57c58; color: white; display: table; width: calc(100%); height: 50px; border-bottom: 3px solid #eee; padding-left: 20px;">@ViewBag.Title</h2>
<div style="background-color: #e57c58; width: calc(100%); height: 5px;"></div>
<br />
<p>
    @Html.ActionLink("Create New", "Create", null, htmlAttributes: new { @class = "btnCreateNew" })
</p>

