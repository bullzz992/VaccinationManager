@model IEnumerable<VaccinationManager.Models.Parent>

@{
    ViewBag.Title = "Parents";
    ViewBag.CurrentPage = "Parents";
}

<h2 style="background-color: #e57c58; color: white; display: table; width: calc(100%); height: 50px; border-bottom: 3px solid #eee; padding-left: 20px;">@ViewBag.Title</h2>
<div style="background-color: #e57c58; width: calc(100%); height: 5px;"></div>
<br/>
<div class="container-fluid">
    <p>
        @Html.ActionLink("Create New", "Create", null, htmlAttributes: new {@class = "btnCreateNew"})
    </p>

    @using (Html.BeginForm("Index", "Parents", FormMethod.Get))
    {
        <p>
            Filter: @Html.DropDownList("filter")
            Value: @Html.TextBox("SearchString")
            <input type="submit" value="Search"/>
        </p>
    }


    <table class="table">
        <tr>
            <th>
                @Html.Label("ID Number")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayName("Home Telephone")
            </th>
            <th>
                @Html.DisplayName("Business Telephone")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cellphone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BloodType)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HomeTel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telephone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cellphone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BloodType)
                </td>
                <td>

                    <div class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Action<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Edit", "Edit", new {id = item.IdNumber})</li>
                            <li>@Html.ActionLink("Details", "Details", new {id = item.IdNumber})</li>
                            <li>@Html.ActionLink("Delete", "Delete", new {id = item.IdNumber})</li>
                        </ul>
                    </div>
                </td>
            </tr>
        }

    </table>
    <script type="text/javascript">
        $(function () {
            $(".dropdown").hover(
                    function () {
                        $('.dropdown-menu', this).stop(true, true).fadeIn("fast");
                        $(this).toggleClass('open');
                        $('b', this).toggleClass("caret caret-up");
                    },
                    function () {
                        $('.dropdown-menu', this).stop(true, true).fadeOut("fast");
                        $(this).toggleClass('open');
                        $('b', this).toggleClass("caret caret-up");
                    });
        });
    </script>
</div>

