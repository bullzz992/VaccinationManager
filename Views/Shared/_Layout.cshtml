<body>

    <div class="banner">
           <div class="logo"> </div>
    </div>

    <div class="navbar">
        <div class="navbarToggle left  "></div>
        <div class="navbaritems left  "> <a>Welcome</a></div>
        <div class="navbarspace right"></div>
        <div class="navbaritems right">
