@model IEnumerable<VaccinationManager.Models.ExtendedFee>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create", null, htmlAttributes: new { @class = "btnCreateNew" })
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FeeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FeeDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FeeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FeeDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.FeeId }) |
                @Html.ActionLink("Details", "Details", new { id=item.FeeId }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.FeeId })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
