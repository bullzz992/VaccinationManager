                        @Html.ActionLink("Add Measurements", "CreateMeasurement", new { id = item.IdNumber }) |
                        @Html.ActionLink("Edit", "Edit", new { id=item.IdNumber }) |
                        @Html.ActionLink("Details", "Details", new { id=item.IdNumber }) |
                        @Html.ActionLink("Delete", "Delete", new { id=item.IdNumber }) |
                        @Html.ActionLink("Measurements", "Measurements", new { id = item.IdNumber })*@
                    <div class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Action<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Add Vaccination", "ChildVaccinations", item)</li>
                            <li>@Html.ActionLink("Add Measurements", "CreateMeasurement", new { id = item.IdNumber })</li>
                            <li>@Html.ActionLink("Edit", "Edit", new { id = item.IdNumber })</li>
                            <li>@Html.ActionLink("Details", "Details", new { id = item.IdNumber })</li>
                            <li>@Html.ActionLink("Delete", "Delete", new { id = item.IdNumber })</li>
                            @*<li>@Html.ActionLink("Measurements", "Measurements", new { id = item.IdNumber })</li>*@
                        </ul>
                    </div>
