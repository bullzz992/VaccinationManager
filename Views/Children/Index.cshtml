@model IEnumerable<VaccinationManager.Models.Child>

@{
    ViewBag.Title = "Children";
}

<h2>Children</h2>

<div class="container-fluid">
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    @using (Html.BeginForm("Index", "Children", FormMethod.Get))
    {
        <p>
            Filter: @Html.DropDownList("filter")
            Value: @Html.TextBox("SearchString")
            <input type="submit" value="Search" />
        </p>
    }
