@model IEnumerable<VaccinationManager.Models.UserStatus>

@{
    ViewBag.CurrentPage = "User Status";

}
    <h2 style="background-color: #e57c58; color: white; display: table; width: calc(100%); height: 50px; border-bottom: 3px solid #eee; padding-left: 20px;">User Statuses</h2>
    <div style="background-color: #e57c58; width: calc(100%); height: 5px;"></div>
    <table class="table">
        <tr>
            
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayName("Practice Number")
            </th>
            <th>
                @Html.DisplayName("Status")
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Branch_Practice_No)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.ActionLink("Edit Status", "Edit", new {id = item.Id}) |
                @Html.ActionLink("Password Reset", "Details", new { id = item.Id })
                
            </td>
        </tr>
    }
    
    </table>

